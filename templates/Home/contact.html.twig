{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5 col-sm-10 col-md-6 col-lg-6">
        <div class="card bg-light mb-5">
            <div class="container px-4">
                <h1 class="mb-5 mt-3 text-center">Contactez-nous</h1>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col">{{ form_row(form.firstname) }}</div>
                    <div class="col">{{ form_row(form.lastname) }}</div>
                </div>
                {{ form_rest(form) }}
                <div class="col text-center">
                    <button class="btn btn-info mt-2 mb-4">{{ button_label|default('Envoyer') }}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
