{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-3 col-sm-10 col-md-6 col-lg-6">
        <h1 class="mb-5">Contactez-nous</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col">{{ form_row(form.firstname) }}</div>
            <div class="col">{{ form_row(form.lastname) }}</div>
        </div>
        {{ form_rest(form) }}
        <div class="col text-center">
            <button class="btn btn-info my-2">{{ button_label|default('Envoyer') }}</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
